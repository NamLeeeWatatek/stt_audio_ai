{
    "manifest_version": 3,
    "name": "Meeting Insight - Scriberr AI",
    "version": "2.0",
    "description": "Professional real-time meeting transcription with Clean Architecture (2026 Edition).",
    "default_locale": "en",
    "permissions": [
        "tabCapture",
        "activeTab",
        "storage",
        "offscreen",
        "tabs",
        "notifications",
        "system.display"
    ],
    "host_permissions": [
        "http://localhost:8080/*",
        "http://localhost:8081/*",
        "https://meet.google.com/*",
        "https://*.zoom.us/*",
        "https://*.teams.microsoft.com/*",
        "https://*.webex.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://meet.google.com/*",
                "https://*.zoom.us/*",
                "https://*.teams.microsoft.com/*",
                "https://*.webex.com/*"
            ],
            "js": [
                "content/index.js"
            ],
            "run_at": "document_start",
            "all_frames": false
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "content/injector.js",
                "content/index.js",
                "shared/message.types.js",
                "platforms/chrome/browser.adapter.js",
                "platforms/chrome/storage.adapter.js"
            ],
            "matches": [
                "https://meet.google.com/*",
                "https://*.zoom.us/*",
                "https://*.teams.microsoft.com/*",
                "https://*.webex.com/*"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "assets/icons/icon16.png",
            "48": "assets/icons/icon48.png",
            "128": "assets/icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background/index.js",
        "type": "module"
    },
    "icons": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    }
}