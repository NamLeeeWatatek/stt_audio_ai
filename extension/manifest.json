{
    "manifest_version": 3,
    "name": "Wata Meeting Notes",
    "version": "2.0",
    "description": "Professional real-time meeting transcription (2026 Edition).",
    "default_locale": "en",
    "permissions": [
        "tabCapture",
        "desktopCapture",
        "activeTab",
        "storage",
        "offscreen",
        "tabs",
        "notifications",
        "system.display"
    ],
    "host_permissions": [
        "http://localhost:8080/*",
        "http://localhost:8081/*",
        "http://127.0.0.1:8080/*",
        "http://127.0.0.1:8081/*",
        "https://meet.google.com/*",
        "https://*.zoom.us/*",
        "https://*.teams.microsoft.com/*",
        "https://*.webex.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://meet.google.com/*",
                "https://*.zoom.us/*",
                "https://*.teams.microsoft.com/*",
                "https://*.webex.com/*"
            ],
            "js": [
                "content/loader.js"
            ],
            "run_at": "document_start",
            "all_frames": false
        },
        {
            "matches": [
                "http://localhost:8080/*",
                "http://localhost:8081/*",
                "http://127.0.0.1:8080/*",
                "http://127.0.0.1:8081/*",
                "https://*.scriberr.ai/*"
            ],
            "js": [
                "content/auth-sync.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "content/injector.js",
                "content/index.js",
                "content/ui.js",
                "shared/message.types.js",
                "platforms/chrome/browser.adapter.js",
                "content/loader.js",
                "platforms/chrome/storage.adapter.js",
                "assets/icons/*"
            ],
            "matches": [
                "https://meet.google.com/*",
                "https://*.zoom.us/*",
                "https://*.teams.microsoft.com/*",
                "https://*.webex.com/*"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "assets/icons/icon16.png",
            "48": "assets/icons/icon48.png",
            "128": "assets/icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background/index.js",
        "type": "module"
    },
    "icons": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    }
}